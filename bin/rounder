"""
Installed script to run the rounder GTK client.
"""

import sys

from rounder.log import setup_logging

# Configure logging: (needs to be done before importing our modules)
log_conf_locations = ["~/.rounder/logging.conf", "./logging.conf"]
setup_logging(log_conf_locations)

from rounder.ui.gtk.main import RounderGtk
from rounder.utils import build_cli_option_parser

if __name__ == "__main__":

    parser = build_cli_option_parser()
    (options, args) = parser.parse_args()

    rounderApp = RounderGtk(options.host, options.port, options.username, 
            options.password)
    rounderApp.main()

